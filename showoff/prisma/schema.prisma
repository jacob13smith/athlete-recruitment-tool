generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      Role     @default(ATHLETE)
  createdAt DateTime @default(now())

  profile       Profile?
  subscription  Subscription?
}

model Profile {
  id            String   @id @default(cuid())
  userId        String   @unique
  publicSlug    String   @unique
  name          String
  graduationYear Int
  height        String?
  position      String?
  club          String?
  highSchool    String?
  location      String?
  bio           String?
  publishedAt   DateTime?

  user   User    @relation(fields: [userId], references: [id])
  videos Video[]
}

model Video {
  id        String @id @default(cuid())
  profileId String
  youtubeId String
  order     Int    @default(0)

  profile Profile @relation(fields: [profileId], references: [id])
}

model Subscription {
  id                 String   @id @default(cuid())
  userId             String   @unique
  stripeCustomerId   String
  status             String
  expiresAt          DateTime?

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  ATHLETE
  PARENT
}
