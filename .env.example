# Database
# PostgreSQL connection string (for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/recruitme?schema=public"
# SQLite for local development (optional)
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Session lifetime (optional; values in seconds)
# SESSION_MAX_AGE=604800   # Max session age (default 7 days). Token invalid after this.
# SESSION_UPDATE_AGE=86400 # Rolling refresh interval (default 24h). Active users get token reset.

# Sentry (Error Monitoring) - Optional
# Get your DSN from https://sentry.io → Your Project → Settings → Client Keys
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Upstash Redis (Rate Limiting) - Optional
# Get credentials from https://console.upstash.com → Your Database
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Resend (Email) - Optional
# Get API key from https://resend.com → API Keys
RESEND_API_KEY=""
RESEND_FROM_EMAIL="onboarding@resend.dev"
